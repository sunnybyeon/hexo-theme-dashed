<% if ((page.prev || page.next) && !is_home()) { %>
    <nav class="pagination">
        <span class="prev">
            <% if (page.prev || page.prev_link) { %>
                <a href="<%- url_for(page.prev.path || page.prev_link) %>">
                    <%= typeof page.prev === "number"
                        ? `${__("page")} ${page.prev}`
                        : (page.prev.title || __("titles.postDefault")) %>
                </a>
            <% } %>
        </span>
        <span class="next">
            <% if (page.next || page.next_link) { %>
                <a href="<%- url_for(page.next.path || page.next_link) %>" >
                    <%= typeof page.next === "number"
                        ? `${__("page")} ${page.next}`
                        : (page.next.title || __("titles.postDefault")) %>
                </a>
            <% } %>
        </span>
    </nav>
<% } %>
